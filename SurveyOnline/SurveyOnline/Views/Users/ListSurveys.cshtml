
@model IEnumerable<SurveyOnline.Models.Survey>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of surveys</h2>
@using (Html.BeginForm("ListSurveys", "User", FormMethod.Get))
{
    <p>
        Find Survey by Name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

@if (!Model.Any())
{
    <p>There are no Surveys availble.</p>
}
else
{
    <table class="table table-dark table-hover">
        <thread>
            <tr>
                <th>ID</th>
                <th>Title</th>
                

            </tr>
        </thread>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td><a href="~/User/Answer/@s.ID">@s.Title</a></td>
                    <td>@s.Topic.Name</td>
                 


                </tr>
            }
        </tbody>
    </table>
}