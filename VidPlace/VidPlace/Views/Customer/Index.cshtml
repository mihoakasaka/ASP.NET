@model IEnumerable<VidPlace.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers List</h2>
Customer List:
@if (!Model.Any())
{
    <h3>No customers</h3>
}
else
{
    <table class="table table-bordered table-hover">
  <thead> <tr><th>Customer</th><th>Type</th></tr></thead>
    <tbody>
        @foreach (var data in Model)
        {
          <tr> 
             <td>@Html.ActionLink(@data.Name,"Detail","Customer",new {ID=data.ID },null)</td>
              <td>@data.MembershipType.Name </td>
          
          </tr>
        }
        </tbody>
   </table>
}
