@model List<VidPlace.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers List</h2>
Customer List:
@if (Model.Count == 0)
{
    <h3>No customers</h3>
}
else
{
    <ul>
        @foreach (var data in Model)
        {
            <li><a href="/Detail/@data.ID">@data.Name</a></li>
        }

    </ul>
}
